<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

>

    <!-- Image of Product -->
    <ImageView
        android:id="@+id/img_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/text_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/tass" />

    <!-- Text Container for Title, Size, and Price -->
    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/img_product"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/action_container"
        android:layout_marginEnd="8dp">

        <!-- Product Title -->
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brown Jacket"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semi_bold"
            tools:text="Brown Jacket" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$83.97"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:text="$83.97" />
    </LinearLayout>

    <!-- Quantity and Delete Icon Container -->
    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/spacing_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Decrement Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_decrement"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/bronze"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:strokeColor="@color/bronze"
            app:strokeWidth="2dp" />

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginEnd="8dp" />

        <!-- Increment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_increment"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/bronze"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:strokeColor="@color/bronze"
            app:strokeWidth="2dp"
            android:gravity="center" />

    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/dark_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_product"
        tools:ignore="UseAppTint" />

</androidx.constraintlayout.widget.ConstraintLayout>
